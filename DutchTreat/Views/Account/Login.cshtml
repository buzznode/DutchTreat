@model LoginModel
@{ 
	ViewBag.Title = "Login";
}

@section scripts {
	<script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
	<div class="col-md-6 offset-md-3">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger" style="font-size: larger"></div>
			<div class="form-group">
				<label asp-for="Username">Username</label>
				<input asp-for="Username" />
				<span asp-validation-for="Username" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Password">Password</label>
				<input asp-for="Password" type="password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="form-group">
				<div class="form-check" style="vertical-align:middle">
					<input asp-for="RememberMe" class="form-check-input" type="checkbox" />
					<label asp-for="RememberMe" class="form-check-label">Remember Me?</label>
				</div>

				<span asp-validation-for="RememberMe" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input class="btn btn-success" type="submit" value="Login" />
			</div>
		</form>
	</div>
</div>